									<div class="comunication-chat-list-item" comment-id="${comment_id}" doc-id="${doc_id}" sentence-id="${sentence_id}" user-id="${user_id}"
									 name="${name}" comment="${comment}" create-time="${create_time}">
										<div class="comunication-chat-list-item-profile">
											<div class="comunication-chat-list-item-profile-picture"></div>
										</div>
										<div class="comunication-chat-list-item-text">
											<span class="comunication-chat-list-item-text-name">
												${name}
											</span>
											<span class="comunication-chat-list-item-text-comment">
												${comment}
											</span>
										</div>
									</div>
								</div>
							</div>
							<form class="comunication-insert" target="document">
